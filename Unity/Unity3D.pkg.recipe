<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
	<key>Description</key>
	<string>Downloads the latest version of Unity 3D and fixes the postinstall script in their package.</string>
	<key>Identifier</key>
	<string>com.github.macprince.pkg.Unity3D</string>
	<key>Input</key>
	<dict>
		<key>NAME</key>
		<string>Unity3D</string>
	</dict>
	<key>MinimumVersion</key>
	<string>1.0.0</string>
	<key>ParentRecipe</key>
	<string>com.github.macprince.download.Unity3D</string>
	<key>Process</key>
	<array>
        <dict>
            <key>Arguments</key>
            <dict>
                <key>flat_pkg_path</key>
                <string>%RECIPE_CACHE_DIR%/downloads/%NAME%-%version%.pkg</string>
                <key>destination_path</key>
                <string>%RECIPE_CACHE_DIR%/Unpack/</string>
            </dict>
            <key>Processor</key>
            <string>FlatPkgUnpacker</string>
        </dict>
		<dict>
			<key>Arguments</key>
			<dict>
				<key>path_list</key>
				<array>
					<string>%RECIPE_CACHE_DIR%/Unpack/Unity.pkg.tmp/Scripts/preinstall</string>
				</array>
			</dict>
			<key>Processor</key>
			<string>PathDeleter</string>
		</dict>
		<dict>
			<key>Arguments</key>
			<dict>
				<key>target_file</key>
				<string>%RECIPE_CACHE_DIR%/Unpack/Unity.pkg.tmp/Scripts/postinstall</string>
				<key>patch_string</key>
				<string>--- orig/postinstall	2025-09-26 19:23:03
+++ fix/postinstall	2025-09-26 19:24:56
@@ -7,8 +7,6 @@
 chown -R root:admin &quot;$DSTVOLUME$DSTROOT&quot;
 chmod -R g+w &quot;$DSTVOLUME$DSTROOT&quot;
 
-mv &quot;${InstallPath}&quot; &quot;${FinalInstallPath}&quot;
-
 if [ ! -d &quot;/Library/Application Support/Unity&quot; ]; then
 	mkdir &quot;/Library/Application Support/Unity&quot;
 	chmod a+rwx &quot;/Library/Application Support/Unity&quot;</string>
			</dict>
			<key>Processor</key>
			<string>com.github.ccaviness.processors/FilePatcher</string>
		</dict>
		<dict>
			<key>Arguments</key>
			<dict>
				<key>source_flatpkg_dir</key>
				<string>%RECIPE_CACHE_DIR%/Unpack/</string>
				<key>destination_pkg</key>
				<string>%RECIPE_CACHE_DIR%/%NAME%-%version%.pkg</string>
			</dict>
			<key>Processor</key>
			<string>FlatPkgPacker</string>
		</dict>
	</array>
</dict>
</plist>
